package com.cb.practice;

import java.util.Scanner;

public class Mine {
	
	public static void main(String args[]) {
		
		int i, temp, swap=0;
		int a[] = {1, 2, 4, 3};
		int b[] = {4, 1, 2, 3};
		
		for(i=0; i<a.length; i++) {
			//System.out.println(a.length+"  "+i);
			if(a[i+1] > a[i]+1) {
				temp = a[i];
				a[i] = a[i+1];
				a[i+1] = temp;
				i=-1;
				swap++;
				if(swap == 2) break;
			}
			
			//System.out.println(i);
		}
		
		for(i=0;i<a.length;i++)
		System.out.print(a[i]);
		
		
		
	}
}


